{
  "name": "Cloudinary Video",
  "group": "Cloudinary",
  "attribute_definition_groups": [
    {
      "id": "group_video",
      "name": "Video Settings",
      "attribute_definitions": [
        {
          "id": "video_selection",
          "type": "custom",
          "required": true,
          "editor_definition": {
            "type": "cloudinary.video_selector_trigger"
          }
        }
      ]
    },
    {
      "id": "group_options",
      "name": "Presentation Options",
      "attribute_definitions": [
        {
          "id": "options_instagram_ready",
          "name": "Make vertical for mobile",
          "description": "Crop video to fit mobile screens in portrait mode.  Cloudinary AI will ensure that the most interesting objects in your video are retained in the center of the frame",
          "type": "boolean",
          "default_value": false,
          "required": false
        },
        {
          "id": "options_captions",
          "name": "Show subtitles",
          "description": "Display subtitles for accessibility or mobile usecases.  Using Cloudinary AI, subtitles can be automatically generated",
          "type": "boolean",
          "default_value": false,
          "required": false
        }
      ]
    },
    {
      "id": "group_overlay",
      "name": "Overlay a picture",
      "attribute_definitions": [
        {
          "id": "overlay_selection",
          "type": "custom",
          "required": false,
          "editor_definition": {
            "type": "cloudinary.overlay_selector"
          }
        }
      ]
    },
    {
      "id": "group_controls",
      "name": "Player Controls",
      "attribute_definitions": [
        {
          "id": "controls_showcontrols",
          "name": "Show Controls",
          "type": "boolean",
          "default_value": true
        },
        {
          "id": "controls_autoplay",
          "name": "Auto Play",
          "type": "boolean",
          "default_value": false
        },
        {
          "id": "controls_loopvideo",
          "name": "Loop Video",
          "type": "boolean",
          "default_value": false
        },
        {
          "id": "controls_theme",
          "name": "Select Theme",
          "type": "enum",
          "values": [
            "Dark",
            "Light"
          ],
          "default_value": "Dark",
          "required": false
        },
        {
          "id": "controls_cropresize",
          "name": "Auto Crop and Resize",
          "type": "boolean",
          "default_value": true
        }
      ]
    }
  ],
  "region_definitions": []
}
